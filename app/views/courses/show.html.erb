<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>Teacher:</strong>
  <%= @course.teacher %>
</p>

<p>
  <strong>End date:</strong>
  <%= @course.end_date %>
</p>
<p>
  <strong>Complete:</strong>
  <%= @course.complete %>
</p>
<% if @course.pdf %>
  <p>
    <strong>Certificate:</strong>
    <iframe src=<%= @course.pdf %> width="1000" height="850" style="border: none;"> </iframe>
  </p>
  <p>
    <%= link_to 'Send PDF to SkillChest', controller: :courses, action: :send_pdf %>
    <!-- , notice: 'sent pdf' , class: 'btn btn-primary'-->
  </p>
<% end %>
<%= link_to 'Edit', edit_course_path(@course) %> |
